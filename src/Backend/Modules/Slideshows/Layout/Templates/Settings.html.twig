{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}

{% endblock %}

{% block content %}
  {% form settings %}
    <div class="row fork-module-content">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">{{ 'lbl.Slides'|trans|capitalize }}</h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <label for="slideWidth">{{ 'lbl.SlideWidth'|trans|capitalize }}</label>
                <div class="input-group">
                  {% form_field slide_width %}
                  <span class="input-group-addon">px</span>
                </div>
                {% form_field_error slide_width %}
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <label for="slideHeight">{{ 'lbl.SlideHeight'|trans|capitalize }}</label>
                <div class="input-group">
                  {% form_field slide_height %}
                  <span class="input-group-addon">px</span>
                </div>
                {% form_field_error slide_height %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row fork-module-actions">
      <div class="col-md-12">
        <div class="btn-toolbar">
          <div class="btn-group pull-right" role="group">
            <button id="editButton" type="submit" name="edit" class="btn btn-primary">
              <span class="fa fa-floppy-o"></span>&nbsp;
              {{ 'lbl.Save'|trans|capitalize }}
            </button>
          </div>
        </div>
      </div>
    </div>
  {% endform %}
{% endblock %}
