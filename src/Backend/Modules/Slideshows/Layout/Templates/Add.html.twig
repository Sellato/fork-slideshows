{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}

{% endblock %}

{% block content %}

  {% form add %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="form-group">
        <label for="title" class="control-label">
          {{ 'lbl.Title'|trans|capitalize }}
          <abbr data-toggle="tooltip" title="{{ 'lbl.RequiredField'|trans|capitalize }}">*</abbr>
        </label>
        {% form_field title %} {% form_field_error title %}
      </div>
      {% if ddmTemplate %}
        <div class="form-group">
          <label for="title" class="control-label">
            {{ 'lbl.Template'|trans|capitalize }}
            <abbr data-toggle="tooltip" title="{{ 'lbl.RequiredField'|trans|capitalize }}">*</abbr>
          </label>
          {% form_field template %} {% form_field_error template %}
        </div>
      {% endif %}
    </div>
  </div>
  <div class="row fork-module-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-right" role="group">
          <button id="addButton" type="submit" name="add" class="btn btn-primary">
            <span class="fa fa-plus-square"></span>&nbsp;
            {{ 'lbl.Add'|trans|capitalize }}
          </button>
        </div>
      </div>
    </div>
  </div>
  {% endform %}
{% endblock %}
