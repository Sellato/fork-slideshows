{% extends '/Layout/Templates/base.html.twig' %}
{% import "Layout/Templates/macros.html.twig" as macro %}

{% block actionbar %}

{% endblock %}

{% block content %}

  {% form edit %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="form-group">
        <label for="title" class="control-label">
          {{ 'lbl.Title'|trans|capitalize }}
          <abbr data-toggle="tooltip" title="{{ 'lbl.RequiredField'|trans|capitalize }}">*</abbr>
        </label>
        {% form_field title %} {% form_field_error title %}
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">{{ 'lbl.Content'|trans|capitalize }}</h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <label for="link">{{ 'lbl.Link'|trans|capitalize }}</label>
            {% form_field link %} {% form_field_error link %}
          </div>
          <div class="form-group">
            <label for="text">{{ 'lbl.Text'|trans|capitalize }}</label>
            {% form_field text %} {% form_field_error text %}
          </div>
          <div class="form-group">
            <label for="image" class="control-label">
              {{ 'lbl.Image'|trans|capitalize }}
              <abbr data-toggle="tooltip" title="{{ 'lbl.RequiredField'|trans|capitalize }}">*</abbr>
            </label>
            <span class="help-block">{{ helpImageDimensions }}</span>
            {% form_field image %} {% form_field_error image %}
            <img class="img-responsive" src="{{ item.image_preview }}" />
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-module-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-left" role="group">
          {% if showSlideshowsDeleteSlide %}
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmDelete">
              <span class="fa fa-trash-o"></span>
              {{ 'lbl.Delete'|trans|capitalize }}
            </button>
          {% endif %}
        </div>
        <div class="btn-group pull-right" role="group">
          <button id="addButton" type="submit" name="add" class="btn btn-primary">
            <span class="fa fa-floppy-o"></span>&nbsp;
            {{ 'lbl.Save'|trans|capitalize }}
          </button>
        </div>
      </div>
      {% if showSlideshowsDeleteSlide %}
        <div class="modal fade" id="confirmDelete" tabindex="-1" role="dialog" aria-labelledby="{{ 'lbl.Delete'|trans|capitalize }}" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <span class="modal-title h4">{{ 'lbl.Delete'|trans|capitalize }}</span>
              </div>
              <div class="modal-body">
                <p>{{ 'msg.ConfirmDelete'|trans|format(item.title)|raw }}</p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                  <span class="fa fa-times"></span>{{ 'lbl.Cancel'|trans|capitalize }}
                </button>
                <a href="{{ geturl('deleteSlide') }}&amp;id={{ item.id }}" class="btn btn-danger">
                  <span class="fa fa-trash"></span>{{ 'lbl.Delete'|trans|capitalize }}
                </a>
              </div>
            </div>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
  {% endform %}
{% endblock %}
