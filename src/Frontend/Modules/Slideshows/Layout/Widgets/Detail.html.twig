<div id="header-carousel" class="carousel slide">
    <ol class="carousel-indicators">
      {% for slide in slideshow.slides %}
        <li data-target="#header-carousel" data-slide-to="{{ slide.sequence }}"{% if loop.first %} class="active"{% endif %}></li>
      {% endfor %}
    </ol>
  <div class="carousel-inner">
    {% for slide in slideshow.slides %}
      <div class="item{% if loop.first %} active{% endif %}">
        {% if slide.link %}
          <a href="{{ slide.link }}">
            <img src="{{ slide.image_full }}" alt="{{ slide.title }}">
          </a>
        {% else %}
            <img src="{{ slide.image_full }}" alt="{{ slide.title }}">
        {% endif %}
        {% if slide.text %}
          <div class="carousel-caption">
            {{ slide.text|raw }}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
  <a class="carousel-control left" href="#header-carousel" data-slide="prev" data-no-scroll>previous</a>
  <a class="carousel-control right" href="#header-carousel" data-slide="next" data-no-scroll>Next</a>
</div>
